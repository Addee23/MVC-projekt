@model Northwind.EntityModels.Category

<h2>@Model.CategoryName</h2>
<p>@Model.Description</p>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">
                        Price: @product.UnitPrice?.ToString("C", new System.Globalization.CultureInfo("sv-SE"))
                    </p>
                    <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-4">Back to Categories</a>
